#!/bin/sh
# A highly simplified gradle wrapper script to avoid shell compatibility issues.

# Set the Java command.
if [ -n "$JAVA_HOME" ]; then
    JAVACMD="$JAVA_HOME/bin/java"
else
    JAVACMD=java
fi

# Get the directory of this script.
# The `dirname` command is POSIX compliant.
APP_HOME=$(dirname "$0")

# Define the classpath to the gradle wrapper jar.
CLASSPATH="$APP_HOME/gradle/wrapper/gradle-wrapper.jar"

# Get the base name of the script.
APP_BASE_NAME=$(basename "$0")

# Execute the gradle wrapper.
# Pass all script arguments "$@" to the Java application.
exec "$JAVACMD" \
    -Dorg.gradle.appname="$APP_BASE_NAME" \
    -classpath "$CLASSPATH" \
    org.gradle.wrapper.GradleWrapperMain \
    "$@"
